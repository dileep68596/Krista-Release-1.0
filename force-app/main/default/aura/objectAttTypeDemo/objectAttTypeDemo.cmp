<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    
    <aura:attribute type="Account" name="acc" default="{sObjectType:'Account'}"></aura:attribute>
    <aura:attribute type="Contact" name="con" ></aura:attribute>
    <aura:attribute type="Training__c" name="trn" ></aura:attribute>
    <div style="width:600px; background-color: #00FF00">
        <lightning:input label="Enter Name" value="{!v.acc.Name}"></lightning:input>
        <lightning:input label="Enter Phone" value="{!v.acc.Phone}"></lightning:input>
        <lightning:input label="Enter Industry" value="{!v.acc.Industry}"></lightning:input>
        <lightning:button label="submit" onclick="{!c.handleSubmit}"></lightning:button>
    </div>
</aura:component>